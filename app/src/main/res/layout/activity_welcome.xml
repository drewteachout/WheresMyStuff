<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.drew.wheresmystuff.controllers.LoginActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imgWMSLogo"
        android:layout_width="353dp"
        android:layout_height="174dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="Logo for the Application" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="@string/title_register_button"
        android:onClick="onRegisterPressed"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="@string/title_login_button"
        android:onClick="onLoginPressed"/>
</LinearLayout>
